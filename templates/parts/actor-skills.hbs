{{!-- Skills --}}
<ul class="skills-list {{skillGroup}}" data-background="{{isBackgroundSkills}}">
  {{#each skillset as |skill s|}}
    {{#if skill.arbitrary}}
      <li class="skill arbitrary flexrow" data-skill="{{s}}">
        <div class="skill-name">
          {{#if compendiumEntry}}
            <a class="compendium-entry" data-compendium-entry="{{compendiumEntry}}">
              <i class="fas fa-book compendium-icon"></i><h4>{{skill.label}}</h4>
            </a>
          {{else}}
            <i class="compendium-icon"></i><h4>{{skill.label}}</h4>
          {{/if}}
        </div>
        <div class="skill-mod-total flexrow skill-roll">
          <div class="rollable image-d20"></div>
          <span class="rollable {{#if (isNegative skill.mod)}}negative{{/if}}">{{numberFormat skill.mod decimals=0 sign=true}}</span>
        </div>
        <div style="flex: 1;"></div>
        <div style="flex: 0 0 auto">
          <a class="skill-control skill-create" style="margin-right: 5px" title="{{localize "PF1AS.Skill.AddSkill"}}">
            <i class="fas fa-plus"></i>
          </a>
        </div>
      </li>
      {{#each skill.subSkills as |subSkill b|}}
        <li class="sub-skill flexrow" data-skill="{{b}}" data-main-skill="{{s}}">
          <div class="skill-name tooltip {{#if subSkill.untrained}}untrained{{/if}}">
            <span class="tooltipcontent">
              @skills.{{s}}.subSkills.{{b}}.mod : {{subSkill.mod}}<br>
              @skills.{{s}}.subSkills.{{b}}.rank : {{subSkill.rank}}<br>

              {{#if subSkill.sourceDetails.length}}
                <br/><br/>{{localize "PF1.FromSources"}}:<br/>
                {{#each subSkill.sourceDetails as |src|}}
                  {{src.name}}: {{src.value}}<br/>
                {{/each}}
              {{/if}}
            </span>
            <i class="compendium-icon"></i><input type="text" name="data.skills.{{s}}.subSkills.{{b}}.name" value="{{subSkill.name}}" placeholder="{{localize "PF1.SkillName"}}"/>
          </div>
          {{#if subSkill.masterRank}}
            <div class="skill-master-mod-total flexrow skill-roll">
              <div class="rollable image-d20"></div>
              <span class="rollable {{#if (isNegative subSkill.masterMod)}}negative{{/if}}">{{numberFormat subSkill.masterMod decimals=0 sign=true}}</span>
              <span title="{{localize "PF1AS.Links.MasterRankPlural"}}">{{skill.masterRank}}</span>
            </div>
          {{/if}}
          <div class="skill-mod-total flexrow skill-roll">
            <div class="rollable image-d20"></div>
            <span class="rollable {{#if (isNegative subSkill.mod)}}negative{{/if}}">{{numberFormat subSkill.mod decimals=0 sign=true}}</span>
          </div>
          <input type="text" class="skill-rank select-on-click" name="data.skills.{{s}}.subSkills.{{b}}.rank" value="{{#if subSkill.rank}}{{subSkill.rank}}{{/if}}" placeholder="{{localize "PF1.Rank"}}" data-dtype="Number" title="{{localize "PF1.SkillRankPlural"}}"/>
          <label class="checkbox skill-cs">
            <abbr title="{{localize "PF1.CSTooltip"}}">{{localize "PF1.CS"}}</abbr>
            <input type="checkbox" disabled {{checked subSkill.cs}}/>
          </label>
          <label class="checkbox skill-acp">
            <abbr title="{{localize "PF1.ACPTooltip"}}">{{localize "PF1.ACP"}}</abbr>
            <input type="checkbox" name="data.skills.{{s}}.subSkills.{{b}}.acp" {{checked subSkill.acp}}/>
          </label>
          <label class="checkbox skill-rt">
            <abbr title="{{localize "PF1.RTTooltip"}}">{{localize "PF1.RT"}}</abbr>
            <input type="checkbox" name="data.skills.{{s}}.subSkills.{{b}}.rt" {{checked subSkill.rt}}/>
          </label>
          <label class="checkbox skill-as">
            <abbr title="{{localize "PF1AS.Skill.AlwaysShowTooltip"}}">{{localize "PF1AS.Skill.AlwaysShow"}}</abbr>
            <input type="checkbox" class="altsheet-skill-checkbox" data-altsheet-config-path="skills.{{s}}.subskills.{{b}}.as" {{checked (skillAlwaysShown ../.. s b)}}/>
          </label>
          <div class="form-group skill-ability">
            <select class="skill-ability" name="data.skills.{{s}}.subSkills.{{b}}.ability" data-dtype="String">
              {{#select subSkill.ability}}
                {{#each ../../config.abilitiesShort as |ability a|}}
                  <option value="{{a}}">{{ability}}</option>
                {{/each}}
              {{/select}}
            </select>
          </div>
          <div class="skill-controls">
            <a class="skill-control skill-delete" title="Delete Skill"><i class="fas fa-trash"></i></a>
          </div>
        </li>
      {{/each}}
    {{else}}
      <li class="skill flexrow" data-skill="{{s}}">
        <div class="skill-name tooltip {{#if skill.untrained}}untrained{{/if}}">
          <span class="tooltipcontent">
            @skills.{{s}}.mod : {{skill.mod}}<br>
            @skills.{{s}}.rank : {{skill.rank}}<br>

            {{#if skill.sourceDetails.length}}
            <br/><br/>{{localize "PF1.FromSources"}}:<br/>
            {{#each skill.sourceDetails as |src|}}
            {{src.name}}: {{src.value}}<br/>
            {{/each}}
            {{/if}}
          </span>
          {{#if skill.custom}}
            <input type="text" name="data.skills.{{s}}.name" value="{{skill.name}}" placeholder="{{localize "PF1.Name"}}"/>
          {{else}}
            {{#if compendiumEntry}}
              <a class="compendium-entry" data-compendium-entry="{{compendiumEntry}}">
                <i class="fas fa-book compendium-icon"></i><h4>{{skill.label}}</h4>
              </a>
            {{else}}
              <h4>{{skill.label}}</h4>
            {{/if}}
          {{/if}}
        </div>
        {{#if skill.masterRank}}
          <div class="skill-master-mod-total flexrow skill-roll">
            <div class="rollable image-d20"></div>
            <span class="rollable {{#if (isNegative skill.masterMod)}}negative{{/if}}">{{numberFormat skill.masterMod decimals=0 sign=true}}</span>
            <span title="{{localize "PF1AS.Links.MasterRankPlural"}}">{{skill.masterRank}}</span>
          </div>
        {{/if}}
        <div class="skill-mod-total flexrow skill-roll">
          <div class="rollable image-d20"></div>
          <span class="rollable {{#if (isNegative skill.mod)}}negative{{/if}}">{{numberFormat skill.mod decimals=0 sign=true}}</span>
        </div>
        <input type="text" class="skill-rank select-on-click" name="data.skills.{{s}}.rank" value="{{#if skill.rank}}{{skill.rank}}{{/if}}" placeholder="{{localize "PF1.Rank"}}" data-dtype="Number" title="{{localize "PF1.SkillRankPlural"}}"/>
        <label class="checkbox skill-cs">
          <abbr title="{{localize "PF1.CSTooltip"}}">{{localize "PF1.CS"}}</abbr>
          <input type="checkbox" disabled {{checked skill.cs}}/>
        </label>
        <label class="checkbox skill-acp">
          <abbr title="{{localize "PF1.ACPTooltip"}}">{{localize "PF1.ACP"}}</abbr>
          <input type="checkbox" name="data.skills.{{s}}.acp" {{checked skill.acp}}/>
        </label>
        <label class="checkbox skill-rt">
          <abbr title="{{localize "PF1.RTTooltip"}}">{{localize "PF1.RT"}}</abbr>
          <input type="checkbox" name="data.skills.{{s}}.rt" {{checked skill.rt}}/>
        </label>
        <label class="checkbox skill-as">
          <abbr title="{{localize "PF1AS.Skill.AlwaysShowTooltip"}}">{{localize "PF1AS.Skill.AlwaysShow"}}</abbr>
          <input type="checkbox" class="altsheet-skill-checkbox" data-altsheet-config-path="skills.{{s}}.as" {{checked (skillAlwaysShown .. s undefined)}}/>
        </label>
        <div class="form-group skill-ability">
          <select class="skill-ability" name="data.skills.{{s}}.ability" data-dtype="String">
            {{#select skill.ability}}
            {{#each ../config.abilitiesShort as |ability a|}}
            <option value="{{a}}">{{ability}}</option>
            {{/each}}
            {{/select}}
          </select>
        </div>
        <div class="skill-controls">
          {{#if ../owner}}{{#if skill.custom}}
          <a class="skill-control skill-delete" title="Delete Skill"><i class="fas fa-trash"></i></a>
          {{/if}}{{/if}}
        </div>
      </li>
    {{/if}}
  {{/each}}
  <div class="skill-controls skills">
    {{#if owner}}
      <a class="skill-control skill-create" title="{{localize "PF1.AddSkill"}}">
        <i class="fas fa-plus"></i>
      </a>
    {{/if}}
  </div>
</ul>
