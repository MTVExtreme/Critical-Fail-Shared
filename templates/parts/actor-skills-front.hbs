{{!-- Skill Rank Info --}}
<div class="flexcol skill-rank">
  <ol class="form-group">
    <li class="flexrow skill-rank-formula">
      <label>{{localize "PF1.SkillBonusRankFormula"}}</label>
      <input type="text" name="data.details.bonusSkillRankFormula" value="{{data.details.bonusSkillRankFormula}}" placeholder="{{localize "PF1.Formula"}}" style="width: 200px; margin-left: 10px; margin-right: 20px" />
      <div>
        <label>{{localize "PF1.SkillRankPlural"}}</label>
        <span style="margin-right: 10px; margin-left: 10px" class="tooltip">
          {{skillRanks.used}} / {{skillRanks.allowed}}{{#if useBGSkills}}&nbsp;&nbsp;&mdash;{{skillRanks.sentToBG}}&ndash;&gt;&nbsp;&nbsp;{{skillRanks.bgUsed}} / {{skillRanks.bgAllowed}}{{/if}}
          <span class="tooltipcontent">
            {{#if sourceData.skillRanks}}
              {{localize "PF1.FromSources"}}:<br/>
              {{#each sourceData.skillRanks as |src|}}
                {{src.name}}: {{src.value}}<br/>
              {{/each}}
            {{/if}}
          </span>
        </span>
        {{#unless useBGSkills}}
          {{#if (lt skillRanks.allowed skillRanks.used)}}
            <span style="flex: 0 0 25px" class="tooltip">
              <div class="tooltipcontent">
                {{localize "PF1AS.Skill.TooManyRanks"}}
              </div>
              <i class="fas fa-exclamation-triangle"></i>
            </span>
          {{/if}}
        {{/unless}}
      </div>
    </li>
  </ol>
</div>

{{#if useBGSkills}}
  <nav class="sheet-navigation tabs" data-group="skillset">
    <a class="item" data-tab="adventure">{{localize "PF1.SkillTypeAdventure"}}</a>
    <a class="item" data-tab="background">{{localize "PF1.SkillTypeBackground"}}</a>
  </nav>

  <section class="skillset-body">
    <div class="tab flexcol" data-group="skillset" data-tab="adventure">
      {{> "modules/critical-fail-shared/templates/parts/actor-skills.hbs" skillset=skillsets.adventure.skills isBackgroundSkills="false" skillGroup="adventure"}}
    </div>

    <div class="tab flexcol" data-group="skillset" data-tab="background">
      {{> "modules/critical-fail-shared/templates/parts/actor-skills.hbs" skillset=skillsets.background.skills isBackgroundSkills="true" skillGroup="background"}}
    </div>
  </section>
{{else}}
  <nav class="sheet-navigation tabs" data-group="skillset" style="display: none">
    <a class="item" data-tab="all">{{localize "PF1.AllSkills"}}</a>
  </nav>

  <section class="skillset-body">
    <div class="tab flexcol" data-group="skillset" data-tab="all">
      {{> "modules/critical-fail-shared/templates/parts/actor-skills.hbs" skillset=skillsets.all.skills isBackgroundSkills="false" skillGroup="adventure"}}
    </div>
  </section>
{{/if}}
